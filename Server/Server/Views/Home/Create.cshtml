@model Employee
@{
    ViewBag.Title = "Add New Employee";
}
<form asp-action="Create" asp-controller="home">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Name</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="PersonnelNumber" class="control-label">PersonnelNumber</label>
        <input type="number" asp-for="PersonnelNumber" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Chief" class="control-label">Chief</label>
        <input type="text" asp-for="Chief" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Department" class="control-label">Department</label>
        <input type="text" asp-for="Department" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Send" class="btn btn-default" />
    </div>
</form>